@model CopaMundivox.Models.User

@{
    ViewBag.Title = "Apagar Conta";
    Layout = "~/Views/_Master.cshtml";
}

<h2>Apagar Conta</h2>

<h3>Tem certeza que desejas apagar a conta?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Copas da Conta
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cup.Count)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-default" /> |
            @Html.ActionLink("Cancelar", "edit", new { id = Model.id })
        </div>
    }
</div>

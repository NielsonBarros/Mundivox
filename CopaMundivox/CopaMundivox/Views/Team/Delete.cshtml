@model CopaMundivox.Models.Team

@{
    ViewBag.Title = "Apagar Time";
    Layout = "~/Views/_Master.cshtml";
}

<h2>Apagar <b>@Html.DisplayFor(model => model.Name)</b></h2>

<h3>Tem certeza que deseja apagar o time?</h3>
@if(ViewBag.cupResult > 0)
{
    <h4 class="text-danger">Todos os resultados da copa serão Apagados.</h4>
}
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Group)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Group)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.winner)
        </dt>

        <dd>
            @{
                bool winner;
                string output;
                if (bool.TryParse(Model.winner.ToString(), out winner))
                {
                    if (winner)
                    {
                        output = "Sim";
                    }
                    else
                    {
                        output = "Não";
                    }
                }
                else
                {
                    output = "-";
                }
            }
            @output
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cup.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cup.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar a Copa", "Details", "Cup", new { id = Model.CupId }, null)
        </div>
    }
</div>

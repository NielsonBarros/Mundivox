@model CopaMundivox.Models.Cup

@{
    ViewBag.Title = "Apagar Copa";
    Layout = "~/Views/_Master.cshtml";
}

<h2>Apagar <b>@Html.DisplayFor(model => model.Name)</b></h2>

<h3>Tem certeza que deseja apagar esta Copa?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Team)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Team.Count)
        </dd>

    </dl>
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-11">
            @{
                Html.RenderPartial("_TeamsList", Model.Team);
            }
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar as minhas Copas", "Index")
        </div>
    }
</div>
